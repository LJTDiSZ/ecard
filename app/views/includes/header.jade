.topBar
  .container
    a(href='index.html')
      span.logoR7 名片通
    ul.pull-left
      li.active
        a(href='/') 商务名片
      li
        a(href='technic.html') 精致名片
      li
        a(href='camera.html') 异形名片
      li
        a(href='vooc.html') 特种名片
      li
        a(href='parameters.html') &#x8BA2;&#x5355;&#x4E2D;&#x5FC3;
    ul.pull-right
      if user
        li
          您好，#{user.name}!
          &nbsp;|&nbsp;
          a.navbar-link(href="/user/logout") 注销
      else
        li
          a.navbar-link(href="#", data-toggle="modal", data-target="#signupModal") 注册
          &nbsp;|&nbsp;
        li
          a.navbar-link(href="#", data-toggle="modal", data-target="#loginModal") 登录
#signupModal.modal.fade
  .modal-dialog
    .modal-content
      form(method="post", action="/user/signup")
        .modal-header 注册
        .modal-body
          .form-group
            label(for="signupName") 用户名
            input#signupName.form-control(name="user[name]", type="text")
          .form-group
            label(for="signupPassword") 密码
            input#signupPassword.form-control(name="user[password]", type="password")
        .modal-footer
          button.btn.btn-defaul(type="button", data-dismiss="modal") 关闭
          button.btn.btn-success(type="submit") 提交
#loginModal.modal.fade
  .modal-dialog
    .modal-content
      form(method="post", action="/user/login")
        .modal-header 登录
        .modal-body
          .form-group
            label(for="loginName") 用户名
            input#loginName.form-control(name="user[name]", type="text")
          .form-group
            label(for="loginPassword") 密码
            input#loginPasword.form-control(name="user[password]", type="password")
        .modal-footer
          button.btn.btn-defaul(type="button", data-dismiss="modal") 关闭
          button.btn.btn-success(type="submit") 提交      

